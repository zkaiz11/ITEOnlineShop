<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="8dp"
    android:layout_height="64dp"
    android:layout_marginVertical="8dp"
    >


    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:id="@+id/productItemImg"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/productItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tool:text="@string/product"/>
        <TextView
            android:id="@+id/productItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tool:text="$10"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/productItemDetail"
        android:contentDescription="Show More"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_prod_more"
        android:background="@android:color/transparent"
        />

</LinearLayout>